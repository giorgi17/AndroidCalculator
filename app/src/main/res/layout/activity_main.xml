<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/calculatorScreen"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textSize="25sp"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/n7"
            android:text="7"
            android:layout_width="0dp"
            android:textSize="25sp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/n8"
            android:text="8"
            android:layout_width="0dp"
            android:textSize="25sp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/n9"
            android:text="9"
            android:layout_width="0dp"
            android:textSize="25sp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/division"
            android:text="/"
            android:layout_width="0dp"
            android:textSize="25sp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/n4"
            android:text="4"
            android:layout_width="0dp"
            android:textSize="25sp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/n5"
            android:text="5"
            android:layout_width="0dp"
            android:textSize="25sp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/n6"
            android:text="6"
            android:layout_width="0dp"
            android:textSize="25sp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/multiplication"
            android:text="*"
            android:layout_width="0dp"
            android:textSize="25sp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/n1"
            android:text="1"
            android:layout_width="0dp"
            android:textSize="25sp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/n2"
            android:text="2"
            android:layout_width="0dp"
            android:textSize="25sp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/n3"
            android:text="3"
            android:layout_width="0dp"
            android:textSize="25sp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/substraction"
            android:text="-"
            android:layout_width="0dp"
            android:textSize="25sp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/dot"
            android:text="."
            android:layout_width="0dp"
            android:textSize="25sp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/n0"
            android:text="0"
            android:layout_width="0dp"
            android:textSize="25sp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/equals"
            android:text="="
            android:layout_width="0dp"
            android:textSize="25sp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/addition"
            android:text="+"
            android:layout_width="0dp"
            android:textSize="25sp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>